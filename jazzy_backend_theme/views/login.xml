<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="jazzy_backend_theme.WebLogin" inherit_id="web.login_layout">
        <xpath expr="//div[hasclass('container')]" position="inside">
            <div style="background-color: #FFF1DB; padding: 40px; font-family: Arial, sans-serif;" class="login-right">
                <div style="max-width: 600px; margin: 0 auto;">
                    <small style="color: #555;font-size:1rem;">2025/5/27 | 虎ノ門ヒルズフォーラム</small>
                    <h1 style="color: #032d60; font-size: 3rem; margin-top: 10px; line-height: 1.4;font-weight: bold;">
                      DataFam Tokyo データとAIが創る<br/>ビジネスパーソンの新常識
                    </h1>
                    <p style="color: #333; margin-top: 20px; font-size: 16px; line-height: 1.8;">
                      Tableau 2.0 へようこそ！データをもっとクリエイティブに、もっとFUNに使いこなす”新しいTableauの魅力と、圧倒的なユーザーコミュニティ「DataFam」コミュニティとの交流を通じ、人とAIがどのように協働し、ビジネスを前進させるソリューションを生み出しているのかをご紹介します。
                    </p>
                    <a href="#" style="display: inline-block; margin-top: 20px; padding: 12px 24px; background-color: #0070D2; color: white; text-decoration: none; border-radius: 4px; font-weight: bold;">
                      詳細・お申込みはこちら
                    </a>
                </div>
            </div>              
        </xpath>
        <xpath expr="//div[hasclass('container')]" position="attributes">
            <attribute name="class" add="login_container" separator=" "/>
        </xpath>
    </template>

</odoo>
